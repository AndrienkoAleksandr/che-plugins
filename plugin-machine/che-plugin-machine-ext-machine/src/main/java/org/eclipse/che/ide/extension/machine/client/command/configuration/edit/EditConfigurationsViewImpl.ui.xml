<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='resources' type='org.eclipse.che.ide.Resources'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="800px" height="400px" addStyleNames="{style.emptyBorder}">
        <g:west size="200.0">
            <g:DockLayoutPanel addStyleNames="{style.emptyBorder}">
                <g:north size="20">
                    <g:FlowPanel>
                        <g:Button ui:field="addButton" text="Add"/>
                        <g:Button ui:field="removeButton" text="Remove"/>
                        <g:Button ui:field="executeButton" text="Execute"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:SimplePanel ui:field="configurations" addStyleNames="{resources.coreCss.simpleListContainer}"
                                   debugId="window-edit-configurations-scrollPanel"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:SimplePanel width="100%" height="100%" ui:field="contentPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
