<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ideui='urn:import:org.eclipse.che.ide.ui.tree'>
    <ui:with field='locale' type='org.eclipse.che.ide.extension.machine.client.MachineLocalizationConstant'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .marginTop {
            margin-top: 5px;
        }

        .label {
            float: left;
            margin-top: 4px;
            margin-left: 2px;
        }

        .border {
            border: 1px solid rgba(0, 0, 0, 0.2);
        }

        .button {
            width: 70px;
            margin-left: 15px;
            margin-top: 3px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="800px" height="400px" addStyleNames="{style.emptyBorder}">
        <g:west size="200.0">
            <g:DockLayoutPanel addStyleNames="{style.emptyBorder} {style.border}">
                <g:north size="30">
                    <g:FlowPanel>
                        <g:Button ui:field="addButton" text="{locale.editConfigurationsViewAddText}"
                                  title="{locale.editConfigurationsViewAddTitle}" addStyleNames="{style.button}"/>
                        <g:Button ui:field="removeButton" text="{locale.editConfigurationsViewRemoveText}"
                                  title="{locale.editConfigurationsViewRemoveTitle}" addStyleNames="{style.button}"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <ideui:Tree ui:field="tree"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:FlowPanel addStyleNames="{style.marginTop}">
                <g:FlowPanel ui:field="savePanel">
                    <g:Label width="50px" text="{locale.editConfigurationsViewNameText}" styleName="{style.label}"/>
                    <g:TextBox width="527px" height="14px" ui:field="configurationName"/>
                </g:FlowPanel>

                <g:SimplePanel width="100%" height="100%" ui:field="contentPanel" addStyleNames="{style.marginTop}"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
