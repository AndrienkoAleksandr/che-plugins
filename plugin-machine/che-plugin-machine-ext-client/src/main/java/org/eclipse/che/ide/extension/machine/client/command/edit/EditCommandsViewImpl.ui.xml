<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='org.eclipse.che.ide.extension.machine.client.MachineLocalizationConstant'/>
    <ui:style src="org/eclipse/che/ide/api/ui/style.css">
        .commandPanel {

        }

        .commandPanel > div:first-child + div {
            border-right: 1px solid popupBorderColor;
        }

        .marginTop {
            margin-top: 5px;
        }

        .label {
            float: left;
            margin-top: 4px;
            margin-left: 2px;
        }

        .border {
            border: 1px solid rgba(0, 0, 0, 0.2);
        }

        .button {
            width: 70px;
            margin-left: 15px;
            margin-top: 3px;
        }

        .leftPart {
            border: 1px solid popupBorderColor;
            margin: 12px 10px 10px 10px;
        }

        .rightPart {
            margin-top:10px;
            margin-left: 10px;
        }

        .categories {
            border-bottom: 1px solid popupBorderColor;
        }

        .filter {
            line-height: 29px;
            margin-right: 5px;
        }

        .filter input {
            border-color: textFieldBorderColor !important;
            min-height: 20px;
            margin: 0 3px 0 3px;
            padding-left: 5px;
        }

        .filter button {
            background: inherit !important;
            border: none !important;
            padding: 0 5px 0 5px;
            height: 100%;
            float: right;
        }

        .filter button svg {
            width: 17px;
            height: 17px;
            display: inline;
            vertical-align: middle;
            fill: toolbarIconColor;
            stroke: toolbarIconColor;
        }

        .filter button:hover svg {
            fill: toolbarHoverIconColor;
            stroke: toolbarHoverIconColor;
        }

        .filter button[disabled] svg {
            fill: checkBoxDisabledIconColor !important;
            stroke: checkBoxDisabledIconColor !important;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="780px" height="440px" addStyleNames="{style.commandPanel}">
        <g:west size="380">
            <g:DockLayoutPanel unit="PX" addStyleNames="{style.leftPart}">
                <g:center>
                    <g:SimplePanel ui:field="categoriesPanel" addStyleNames="{style.categories}"
                                   debugId="commandWizard"/>
                </g:center>
                <g:south size="30">
                    <g:FlowPanel ui:field="filterPanel" addStyleNames="{style.filter}">
                            <g:TextBox ui:field="inputField" width="220px"/>
                    </g:FlowPanel>
                </g:south>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:FlowPanel addStyleNames="{style.rightPart}">
                <g:FlowPanel ui:field="savePanel">
                    <g:Label width="50px" text="{locale.editCommandsViewNameText}" styleName="{style.label}"/>
                    <g:TextBox width="327px" height="14px" ui:field="configurationName"/>
                </g:FlowPanel>
                <g:SimplePanel width="327px" height="70%" ui:field="contentPanel" addStyleNames="{style.marginTop}"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
