<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="locale" type="org.eclipse.che.ide.ext.java.client.JavaLocalizationConstant"/>

    <ui:style field="style">
        .main {
            width: 400px;
            height: 450px;
        }

        .scrollPanel {
            width: 100%;
            height: 100%;
        }

        .label {
            float: right;
            margin-bottom: 1px;
            text-align: end;
            width: 100%;
            border-top: 1px solid;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.main}" debugId="file-structure-mainPanel">
        <g:ScrollPanel ui:field="treeContainer" addStyleNames="{style.scrollPanel}">
        </g:ScrollPanel>
        <g:Label ui:field="showInheritedLabel" addStyleNames="{style.label}"/>
    </g:FlowPanel>

</ui:UiBinder>